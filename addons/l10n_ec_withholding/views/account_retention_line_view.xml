<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <!-- RETENCIONES LÃNEAS-->

    <!-- TREE VIEW -->
    <record id="view_account_retention_line_tree" model="ir.ui.view">
        <field name="name">account.retention.line.tree</field>
        <field name="model">account.retention.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="tax_id"/>
                <field name="group_id"/>
                <field name="amount"/>
                <field name="account_id"/>
                <field name="fiscal_year"/>
                <field name="retention_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_account_retention_line_form_ec" model="ir.ui.view">
        <field name="name">account.retention.line.form</field>
        <field name="model">account.retention.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="tax_id"/>
                            <field name="group_id"/>
                            <field name="amount"/>
                            <field name="account_id"/>
                            <field name="fiscal_year"/>
                            <field name="retention_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
